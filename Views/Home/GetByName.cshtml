@model Auto

@{
    ViewData["Title"] = "GetByName";
}

<h1>GetByName</h1>

<h2>Get Auto By Name<a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<h3>@ViewBag.StatusCode</h3>
<form method="post">
    <div class="form-group">
        <label for="ID">Id:</label>
        <input class="form-control" name="ID" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Get Auto</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Auto</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.ID</td>
                <td>@Model.Make_Name</td>
            </tr>
        </tbody>
    </table>
}

